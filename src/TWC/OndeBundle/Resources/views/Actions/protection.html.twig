{% extends 'TWCOndeBundle::ondelayout.html.twig' %}
{% block Title %}Homepage {{parent()}}{% endblock %}
{% block Style %}
	{{parent()}}
	<style>
		.xs-banner-inner-section{
			padding-bottom: 0px;
		}
		.num-vert{
			color: green;
		}
		.point-cu {
		    color: #5cb37c !important;
		    text-decoration: underline;
		}
		.breadcrumb{
			margin-top:15px;position: absolute;right: 15px;
		}
		@media only screen and (max-width: 992px){
			.breadcrumb{
				margin-top:15px;position: initial;
			}
		}
		
		.video-container {
			position: relative;
			padding-bottom: 56.25%;
			padding-top: 30px;
			height: 0;
			overflow: hidden;
		}

		.video-container iframe,  
		.video-container object,  
		.video-container embed {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
		}
	</style>

{% endblock %}
{% block body %}
	{% if app.request.locale != "ar" %}
		{% include "TWCOndeBundle:Default:header.html.twig" %} 
	{% endif %}
	{% if app.request.locale == "ar" %}
		{% include "TWCOndeBundle:Default:headerAr.html.twig" %} 
	{% endif %}
	<section class="xs-banner-inner-section parallax-window" style="background-image:url('{{asset('front/images/backgrounds/parralax_3.jpg')}}');">
		<div class="xs-black-overlay"></div>
		<div class="container">
			
		</div>
	</section>

	<main class="xs-main">
		<div class="xs-content-section-padding xs-blog-single">
			<div class="container">
				<div class="row">
					<div class="col-lg-6 col-md-12 offset-lg-3 order-md-2 order-lg-first">
						<div class=" xs-inner-banner-content pb-3">
							<h2 class="color-title-b">{{"protection.title"|trans}}</h2>
						</div>
					</div>
					<div class="col-lg-3 col-md-12 text-lg-right order-md-first order-lg-2">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="{{path('twc_onde_homepage')}}">{{"header.accueil"|trans}}</a></li>
							<li class="breadcrumb-item active" aria-current="page">{{"header.projets.protection"|trans}}
							</li>
						</ol>
					</div>
				</div>
				{# <div class="xs-inner-banner-content  pb-3">
					<h2 class="color-title-b">{{"protection.title"|trans}}</h2>
				</div> #}
				<div class="row">
					<div class="col-md-12 col-lg-6">
						<div class="xs-text-content xs-pr-20">
							<p class="p-description-first">
								{{"protection.description1"|trans|raw}}
							</p>
						</div><!-- .xs-text-content END -->
					</div>
					{# <div class="col-md-6 col-lg-3">
						<div class="xs-feature-image">
							<img src="{{asset('assets/images/img1.jpg')}}" alt="">
						</div>
					</div>
					<div class="col-md-6 col-lg-3">
						<div class="xs-feature-image">
							<img src="{{asset('assets/images/img2.jpg')}}" alt="">

						</div>
					</div> #}
					<div class="col-md-12 col-lg-6">
						<div class="video-container">
							<iframe width="560" height="315" src="{{ app.request.locale != "en" ? 'https://www.youtube.com/embed/JfxZ2vzquPs': 'https://www.youtube.com/embed/BIe2Yx9oR-U'}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12 col-lg-12">
						<div class="xs-text-content xs-pr-20">
							<p class="p-description-second">
								{{"protection.description2"|trans|raw}} 
							</p>
							<p class="p-description-first"><a href="https://2511.ma/" class="point-cu">2511.ma</a></p>
						</div><!-- .xs-text-content END -->
					</div>
				</div>
			</div>
		</div>
	</main>
	{{ render(controller("TWCOndeBundle:Default:footer")) }}
{% endblock %}
{% block custom_js %}
	<script src="{{asset('front/js/spectragram.min.js')}}"></script>
	<script type="text/javascript">
		$( document ).ready(function() {
		    $(".blue-header").css('display','none'); 
		    $(".selected-pr").addClass("active");
		    $(".header-transparent .nav-menu li .selected-pr .submenu-indicator-chevron").css("border-color","transparent #5cb37c #5cb37c transparent");
		});
	</script>
{% endblock %}