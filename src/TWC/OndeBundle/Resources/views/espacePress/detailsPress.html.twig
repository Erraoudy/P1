{% extends 'TWCOndeBundle::ondelayout.html.twig' %}
{% block Title %}Homepage {{parent()}}{% endblock %}
{% block Style %}
	{{parent()}}
	<style>
		.xs-unorder-list.check li{
			padding-left: 60px !important;
		}
		.left-descri{
				text-align: left;
			}
		.xs-banner-inner-section{
			padding-bottom: 0px;
		}
		.entry-date{
			color: #87ae81; font-size: 1.14286em; display: inline-block; line-height: 1;
		}
		.entry-date:hover{
			color: #87ae81; font-size: 1.14286em; display: inline-block; line-height: 1;
		}
		.breadcrumb{
			float: right;
		}
		.breadcrumb{
			float: right;
			position: inherit;
		}
		@media only screen and (max-width: 992px){
			.breadcrumb{
				float: none;
			}
		}
		{% if app.request.locale == "ar" %}
			.xs-blog-single	{
				direction: rtl;
			}
			.entry-title{
				text-align: right;
			}
			.download-pdf {
			    float: left !important;
			}
		{% endif %}
	</style>
{% endblock %}
{% block body %}
	{% if app.request.locale != "ar" %}
		{% include "TWCOndeBundle:Default:header.html.twig" %} 
	{% endif %}
	{% if app.request.locale == "ar" %}
		{% include "TWCOndeBundle:Default:headerAr.html.twig" %} 
	{% endif %}
	
	<section class="xs-banner-inner-section parallax-window" style="background-image:url('{{asset('front/images/backgrounds/parralax_3.jpg')}}');">
		<div class="xs-black-overlay"></div>
			<div class="container">
				
			</div>
		</section>
	</section>

	<main class="xs-main">				
	<!-- blog single post -->
	<div class="xs-content-section-padding xs-blog-single">
	<div class="container">
		{# <div class=" xs-inner-banner-content pb-3">
			<h2 class="color-title-b">Details</h2>
		</div> #}
		<div class="row" style="margin-bottom: 30px;">
			<div class="col-lg-12 col-md-12 text-lg-right">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="{{path('twc_onde_homepage')}}">{{"header.accueil"|trans}}</a></li>
					<li class="breadcrumb-item active" aria-current="page">{{"header.espacePresse"|trans}}</li>
				</ol>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-1">
			</div>
			<div class="col-md-12 col-lg-10">
				<!-- format standard -->

				<article class="post format-standard hentry xs-blog-post-details">
					<div class="post-media post-image">
						{# {% for item in article.image %}
							{% set count = random(99) %}
								
							<img src="{{ item.objectkey != null ? asset(item.objectkey[1:] ~ '?' ~ count ) : asset('assets/images/none.png') }}" class="img-responsive" alt="" style="height: 440px;">
						{% endfor %} #}
						<img src="{{ media.image|length > 0 ? asset(media.image) : asset('assets/images/noimage.png') }}" class="img-responsive" alt="" style="height: 440px;">
					</div><!-- .post-media END -->

					<div class="post-body xs-border xs-padding-40">
						<div class="download-pdf">
							<a {% if app.request.locale == "fr" %}href="{{ asset(media.fileName) }}" {% elseif app.request.locale == "en" %} href="{{ asset(media.fileNameEn) }}" {% elseif app.request.locale == "ar" %} href="{{ asset(media.fileNameAr) }}" {% endif %} target="_blank">
								<span class="">
									<i class="fa fa-download" aria-hidden="true"></i>
								</span>
							</a>
							
						</div>
						<div class="entry-header">
							<div class="post-meta row">
								<div class="col-md-2 xs-padding-0">
				 					<span class="post-meta-date"><b>{{media.creationDate|date("d")}}</b> {{media.creationDate|date("M")}}</span>
				 				</div>
							</div><!-- .row end -->
			 				<h2 class="entry-title xs-post-entry-title">
				 				<a href="#">
				 					{% if app.request.locale == "fr" %}
										{{media.title}}
									{% endif %}
									{% if app.request.locale == "en" %}
										{{media.titleEn}}
									{% endif %}
									{% if app.request.locale == "ar" %}
										{{media.titleAr}}
									{% endif %}
				 				</a>
				 			</h2>
						</div><!-- header end -->
						
						<div class="entry-content">
							<p>
								{% if app.request.locale == "fr" %}
									{{media.contenu|raw}}
								{% endif %}
								{% if app.request.locale == "en" %}
									{{media.contenuEn|raw}}
								{% endif %}
								{% if app.request.locale == "ar" %}
									{{media.contenuAr|raw}}
								{% endif %}
							</p>
						</div><!-- .xs-entry-content END -->

					</div><!-- post-body end -->
				</article><!-- .post  END -->
			</div>
		</div>
	</div><!-- .container end -->
</div>	<!-- End blog single post -->

</main>
	{{ render(controller("TWCOndeBundle:Default:footer")) }}
{% endblock %}
{% block custom_js %}
	<script type="text/javascript">
		$( document ).ready(function() {
		    $(".blue-header").css('display','none');
		});
	</script>
{% endblock %}