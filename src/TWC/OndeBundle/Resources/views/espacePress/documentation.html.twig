{% extends 'TWCOndeBundle::ondelayout.html.twig' %}
{% block Title %}Homepage {{parent()}}{% endblock %}
{% block Style %} 
	{{parent()}}
	<style>
		.xs-unorder-list.check li{
			padding-left: 60px !important;
		}
		.left-descri{
				text-align: left;
			}
		.xs-banner-inner-section{
			padding-bottom: 0px;
		}
		.entry-date{
			color: #87ae81; font-size: 1.14286em; display: inline-block; line-height: 1;
		}
		.entry-date:hover{
			color: #87ae81; font-size: 1.14286em; display: inline-block; line-height: 1;
		}
		.entry-title{
			display: -webkit-box;
		    -webkit-line-clamp: 3;
		    -webkit-box-orient: vertical;
		    overflow: hidden;
		    text-overflow: ellipsis;
		    color: #1e1e1e !important;
		}
		.breadcrumb{
			margin-top:15px;position: absolute;right: 15px;
		}
		@media only screen and (max-width: 992px){
			.breadcrumb{
				margin-top:15px;position: initial;
			}
		}
		{% if app.request.locale == "ar" %}
			.list-articles	{
				direction: rtl;
			}
			.entry-meta{
				float: right;
				direction: ltr;
			}
			.entry-date{
				float: right;
			}
			.entry-title{
				margin-top: 38px;
			}
		{% endif %}
	</style>
{% endblock %}
{% block body %}
	{% if app.request.locale != "ar" %}
		{% include "TWCOndeBundle:Default:header.html.twig" %} 
	{% endif %}
	{% if app.request.locale == "ar" %}
		{% include "TWCOndeBundle:Default:headerAr.html.twig" %} 
	{% endif %}
	
	<section class="xs-banner-inner-section parallax-window" style="background-image:url('{{asset('front/images/backgrounds/parralax_3.jpg')}}');">
		<div class="xs-black-overlay"></div>
			<div class="container">
				{# <div class="color-white xs-inner-banner-content">
					<ul class="xs-breadcumb">
						<li class="badge badge-pill badge-primary"><a href="index.html" class="color-white"> {{"plaidoyer.text1"|trans}} /</a> {{"plaidoyer.text2"|trans}}</li>
					</ul>
				</div> #}
				
			</div>
		</section>
	</section>

	<main class="xs-main">
	<!-- blog section -->
	<section class="xs-content-section-padding">
		<div class="container">
			<div class="row">
				<div class="col-lg-6 col-md-12 offset-lg-3 order-md-2 order-lg-first">
					<div class=" xs-inner-banner-content pb-3 ">
						<h2 class="color-title-b">{{"header.espacePresse"|trans}}</h2>
					</div>
				</div>
				<div class="col-lg-3 col-md-12 text-lg-right order-md-first order-lg-2">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="{{path('twc_onde_homepage')}}">{{"header.accueil"|trans}}</a></li>
						<li class="breadcrumb-item active" aria-current="page">{{"header.espacePresse"|trans}}</li>
					</ol>
				</div>
			</div>
			{# <div class=" xs-inner-banner-content pb-3">
				<h2 class="color-title-b">Espace presse</h2>
			</div> #}
			<div class="row xs-mb-50 list-articles">
				{% for media in medias %}
					{% if media.status != "draft" %}
						<a href="" title="">
							<div class="col-lg-4 col-md-6 articles-details" data-id="{{media.id}}">
								<form action="" method="post">
									<div class="xs-box-shadow xs-single-journal xs-mb-30">
										<div class="entry-thumbnail" style="background-image: url({{ media.image|length > 0 ? asset(media.image) : asset('assets/images/noimage.png') }});height: 220px;background-repeat:no-repeat;background-size: cover;background-position: center;">
										</div><!-- .xs-item-header END -->
										<div class="entry-header" style="min-height: 190px;">
											<div class="entry-meta">
												<span class="date">
													<a href=""  rel="bookmark" class="entry-date">
														{{media.creationDate|date("d M Y")}}
													</a>
												</span>
											</div>
											
											<h4 class="entry-title">
												{% if app.request.locale == "fr" %}
													<a href="#">{{media.title}}</a>
												{% endif %}
												{% if app.request.locale == "en" %}
													<a href="#">{{media.titleEn}}</a>
												{% endif %}
												{% if app.request.locale == "ar" %}
													<a href="#">{{media.titleAr}}</a>
												{% endif %}
											</h4>
										</div><!-- .xs-entry-header END -->
										<span class="xs-separetor"></span>
									</div><!-- .xs-from-journal END -->
								</form>
							</div>
							{# <div class="col-lg-4 col-md-6 articles-details" data-id="{{media.id}}">
								<form action="" method="post">
									<div class="xs-box-shadow xs-single-journal xs-mb-30">
										<div class="entry-thumbnail  " >
											<img src="{{ media.image|length > 0 ? asset(media.image) : asset('assets/images/noimage.png') }}" alt="">
											
										</div><!-- .xs-item-header END -->
										<div class="entry-header">
											
											<div class="entry-meta">
												<span class="date">
													<a href=""  rel="bookmark" class="entry-date">
														{{media.creationDate|date("d/m/Y")}}
													</a>
												</span>
											</div>
											
											<h4 class="entry-title title-media">
												{% if app.request.locale == "fr" %}
													{{media.title}}
												{% endif %}
												{% if app.request.locale == "en" %}
													{{media.titleEn}}
												{% endif %}
												{% if app.request.locale == "ar" %}
													{{media.titleAr}}
												{% endif %}
											</h4>
										</div><!-- .xs-entry-header END -->
										<span class="xs-separetor"></span>
									</div><!-- .xs-from-journal END -->
								</form>
							</div> #}
						</a>
					{% endif %}
				{% endfor %}
			</div><!-- .row end -->		
		</div>
	</section>	
</main>
	{{ render(controller("TWCOndeBundle:Default:footer")) }}
{% endblock %}
{% block custom_js %}
	<script type="text/javascript">
		$( document ).ready(function() {
		    $(".blue-header").css('display','none');
		    $(".selected-ep").addClass("active");
		    $(".header-transparent .nav-menu li .selected-ep .submenu-indicator-chevron").css("border-color","transparent #5cb37c #5cb37c transparent");
		});
	</script>
	<script>
        $('.articles-details').on('click',function(e){
            var id = $(this).attr("data-id");
            path = '{{ path('index_detailsPress', {id: '1' }) }}';
            path = path.replace('1',id);
            $.ajax({
                type: 'POST',
                url: path,
                data : {'id' : id},
                success: function(data) {
                   	var path = '{{ path("index_detailsPress", {id: 1}) }}';

                   	window.location.href = path.replace("1", id);

                },
                error: function(data) {
                },
            });
        });      
    </script>
{% endblock %}